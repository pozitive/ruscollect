= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name, 'Name'
    = f.text_field :name, {required: '', placeholder: 'Name'}
  .field
    = f.label :email, 'Email'
    = f.text_field :email, {required: '', placeholder: "yourname@example.biz"}
  .field
    = f.label :phone, 'Phone'
    = f.text_field :phone, {placeholder: "18688883692"}
  .field
    = f.text_area :note, {required: '', placeholder: "Message"}
  .actions
    = f.submit 'Send', class: 'button success radius'
